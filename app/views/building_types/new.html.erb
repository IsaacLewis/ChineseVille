<h1>New building_type</h1>

<% form_for(@building_type, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :bonus_type %><br />
    <%= f.text_field :bonus_type %>
  </p>
  <p>
    <%= f.label :effect %><br />
    <%= f.text_field :effect %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', building_types_path %>
