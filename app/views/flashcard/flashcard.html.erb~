<%= render :partial => "answer" unless @answer.nil? %>
<div id="flashcard">
<div id="hint1"><%= @flashcard.word.character %></div>
<div id="hint2"><%= @flashcard.word.pinyin %></div>
</div>

<table>
<tr>
<% for answer in @possible_answers %>
  <td>
  <% form_tag ({:controller => "practice", :action => "answer"}, :method => :post, :class => "inline") do %>
    <%= hidden_field_tag :question_id, @flashcard.word_id %>
    <%= hidden_field_tag :answer_id, answer.id %>
    <%= submit_tag answer.english.gsub('; ',";\r\n"), :class => "answer" %> 
  <% end %>
  </td>
<% end %>
</tr>
</table>
